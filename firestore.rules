rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to website data
    match /website/{document} {
      allow read: if true;
      allow write: if true; // You can restrict this in production
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}